<div class="container bg-light p-3 rounded">
  <h2 class="">Login de Usuario</h2>
  <form action="login" method="post">
    <div class="mb-3">
      <label for="title" class="form-label">Ingrese su nombre</label>
      <input type="text" class="form-control" name="name" required/>
    </div>
    <div class="mb-3">
      <label for="title" class="form-label">Ingrese su correo electrónico</label>
      <input type="email" class="form-control" name="username" required/>
    </div>
    <div class="mb-3">
      <label for="title" class="form-label">Ingrese su contraseña</label>
      <input type="password" class="form-control" name="password" required/>
    </div>
    <button type="submit" class="btn btn-primary">Login</button>
  </form>
  <a href="register" class="btn btn-primary btn-redirect">Registrarse</a>
</div>