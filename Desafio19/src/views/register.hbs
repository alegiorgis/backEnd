<div class="container bg-light p-3 rounded">
  <h2 class="">Registro de Usuario</h2>
  <form action="register" method="post">
    <div class="mb-3">
      <label for="title" class="form-label">Ingrese su nombre</label>
      <input type="text" class="form-control" name="name" required />
    </div>
    <div class="mb-3">
      <label for="title" class="form-label">Ingrese su dirección</label>
      <input type="text" class="form-control" name="address" required />
    </div>
    <div class="mb-3">
      <label for="title" class="form-label">Ingrese su edad</label>
      <input type="number" class="form-control" name="age" min="18" max="120" maxlength="3" required />
      <div class="invalid-feedback">
        Debes ser mayor de 18 años para registrate
      </div>
    </div>
    <div class="mb-3">
      <label for="title" class="form-label">Ingrese su teléfono</label>
      <input type="tel" class="form-control" name="phone" placeholder="Ej: +549351123456" pattern="[+][0-9]{8,20}" required />
    </div>
    <div class="mb-3">
      <label for="title" class="form-label">Ingrese URL de su avatar</label>
      <input type="url" class="form-control" name="avatar"/>
      <div class="form-text">Tamaño máximo del archivo 1MB</div>
    </div>
    <div class="mb-3">
      <label for="title" class="form-label">Ingrese su email</label>
      <input type="email" class="form-control" name="username" required />
      <div class="invalid-feedback">
        Introduce una dirección de email correcta
      </div>
    </div>
    <div class="mb-3">
      <label for="title" class="form-label">Ingrese su contraseña</label>
      <input type="password" class="form-control" name="password" minlength="8" required/>
      <div class="invalid-feedback">
        Debe tener al menos 8 caracteres
      </div>
    </div>
    <button type="submit" class="btn btn-primary">Registrarse</button>
  </form>
  <a href="login" class="btn btn-primary btn-redirect">Login</a>
</div>
<script src="register.js"></script>